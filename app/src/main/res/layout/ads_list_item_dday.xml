<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ad_item_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_thum1" />

    <TextView
        android:id="@+id/ad_item_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/apple_sd_gothic_neo_regular"
        android:lineSpacingExtra="6sp"
        android:lines="1"
        android:text="모모스 커피"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_item_img" />

    <TextView
        android:id="@+id/ad_item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제품 · 10000"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/darkMint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad_item_tv_title"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/img_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/ad_item_tv_price"
        app:layout_constraintStart_toEndOf="@+id/ad_item_tv_price"
        app:layout_constraintTop_toTopOf="@+id/ad_item_tv_price"
        app:srcCompat="@drawable/img_cash" />

    <TextView
        android:id="@+id/item_tv_dday"
        android:layout_width="45dp"
        android:layout_height="16dp"
        android:gravity="center"
        android:background="#00f6ae"
        android:text="D-7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>