<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/news_item_img"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />

    <TextView
        android:id="@+id/news_item_company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="700"
        android:textSize="12sp"
        android:lineSpacingExtra="8sp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_item_img"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/news_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:fontFamily="@font/apple_sd"
        android:textFontWeight="200"
        android:textSize="14sp"
        android:lineSpacingExtra="6sp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_item_company_tv"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/news_item_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D_day"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="500"
        android:textSize="12sp"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/darkMint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_item_title_tv"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>