<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/usage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:lineSpacingExtra="3sp"
        android:text="시카솔 클렌징 워터"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usage_io"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3sp"
        android:textColor="#9fa4aa"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/usage_title"
        app:layout_constraintTop_toBottomOf="@+id/usage_title"
        tools:text="입금" />

    <TextView
        android:id="@+id/usage_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="3sp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/usage_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/usage_title"
        tools:text="+5000" />

    <TextView
        android:id="@+id/usage_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3sp"
        android:textColor="#9fa4aa"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/usage_io"
        app:layout_constraintEnd_toEndOf="@+id/usage_money"
        app:layout_constraintTop_toTopOf="@+id/usage_io"
        tools:text="2019.12.24" />

</androidx.constraintlayout.widget.ConstraintLayout>