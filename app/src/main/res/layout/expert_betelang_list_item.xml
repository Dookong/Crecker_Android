<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/betelang_profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="23dp"
                android:src="@drawable/profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/betelang_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="3sp"
                android:text="김필원"
                android:textColor="#000000"
                android:textFontWeight="600"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/betelang_profile_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/betelang_class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="3sp"
                android:text="전문가"
                android:textColor="#000000"
                android:textFontWeight="200"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/betelang_name_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/betelang_affiliation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="7sp"
                android:text="현 태평양 로펌 변호사"
                android:textColor="#000000"
                android:textFontWeight="200"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/betelang_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/betelang_name_tv" />

            <TextView
                android:id="@+id/betelang_incident_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="7sp"
                android:text="크리에이터 담당 사건"
                android:textColor="#000000"
                android:textFontWeight="200"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/betelang_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/betelang_affiliation_tv" />

            <TextView
                android:id="@+id/betelang_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="7sp"
                android:text="5"
                android:textColor="#1ec695"
                android:textFontWeight="200"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/betelang_incident_tv"
                app:layout_constraintStart_toEndOf="@+id/betelang_incident_tv"
                app:layout_constraintTop_toTopOf="@+id/betelang_incident_tv" />

            <TextView
                android:id="@+id/betelang_gun_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="7sp"
                android:text="건"
                android:textColor="#000000"
                android:textFontWeight="200"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/betelang_num_tv"
                app:layout_constraintStart_toEndOf="@+id/betelang_num_tv"
                app:layout_constraintTop_toTopOf="@+id/betelang_num_tv" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>