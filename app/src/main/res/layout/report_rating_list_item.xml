<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rating_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/montserrat"
        android:lineSpacingExtra="12sp"
        android:text="1"
        android:textColor="@color/black_two"
        android:textFontWeight="650"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rating_category_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_beauty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating_category_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/apple_sd"
        android:lineSpacingExtra="16sp"
        android:text="카테고리"
        android:textColor="@color/black_two"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/apple_sd"
        android:lineSpacingExtra="20sp"
        android:text="영상당 평균 조회수 "
        android:textColor="@color/cool_grey"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_category_title_tv" />

    <TextView
        android:id="@+id/rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:lineSpacingExtra="20sp"
        android:paddingLeft="2dp"
        android:text="999999"
        android:textColor="@color/cool_grey"
        android:textFontWeight="500"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/rating_view_tv"
        app:layout_constraintStart_toEndOf="@+id/rating_view_tv" />

    <TextView
        android:id="@+id/rating_etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd"
        android:lineSpacingExtra="20sp"
        android:text=" 회"
        android:textColor="@color/cool_grey"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/rating_view"
        app:layout_constraintTop_toTopOf="@+id/rating_view" />

</androidx.constraintlayout.widget.ConstraintLayout>