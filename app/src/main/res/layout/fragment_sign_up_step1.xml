<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".membership.register.SignUpStep1Frag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_register_step1"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/img_step1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_register_step1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="51dp"
                android:fontFamily="@font/montserrat"
                android:lineSpacingExtra="17sp"
                android:text="ID"
                android:textColor="#333333"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_register_step1_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="17sp"
                android:text=" 이메일"
                android:textColor="#333333"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/tv_register_step1_id"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_register_step1_id"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edt_register_background"
                android:ems="10"
                android:fontFamily="@font/apple_sd"
                android:gravity="center_vertical"
                android:hint="이메일을 입력하세요"
                android:inputType="textPersonName"
                android:lineSpacingExtra="17sp"
                android:paddingLeft="10dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_step1_id" />

            <TextView
                android:id="@+id/tv_register_step1_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="17sp"
                android:text="비밀번호"
                android:textColor="#333333"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_register_step1_id" />

            <EditText
                android:id="@+id/edt_register_step1_pwd"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edt_register_background"
                android:ems="10"
                android:fontFamily="@font/apple_sd"
                android:gravity="center_vertical"
                android:hint="비밀번호를 입력하세요"
                android:inputType="textPassword"
                android:lineSpacingExtra="17sp"
                android:paddingLeft="10dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_step1_pwd" />

            <EditText
                android:id="@+id/edt_register_step1_pwd_confirm"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edt_register_background"
                android:ems="10"
                android:fontFamily="@font/apple_sd"
                android:gravity="center_vertical"
                android:hint="비밀번호를 확인하세요"
                android:inputType="textPassword"
                android:lineSpacingExtra="17sp"
                android:paddingLeft="10dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_register_step1_pwd" />

            <TextView
                android:id="@+id/tv_register_step1_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="17sp"
                android:text="전화번호"
                android:textColor="#333333"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_register_step1_pwd_confirm" />

            <EditText
                android:id="@+id/edt_register_step1_phone"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edt_register_background"
                android:ems="10"
                android:fontFamily="@font/apple_sd"
                android:gravity="center_vertical"
                android:hint="전화번호를 입력하세요"
                android:inputType="number"
                android:lineSpacingExtra="17sp"
                android:paddingLeft="10dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_step1_phone" />

            <TextView
                android:id="@+id/tv_register_step1_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/apple_sd"
                android:lineSpacingExtra="17sp"
                android:text="주소"
                android:textColor="#333333"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_register_step1_phone" />

            <EditText
                android:id="@+id/edt_register_step1_addr"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edt_register_background"
                android:ems="10"
                android:fontFamily="@font/apple_sd"
                android:gravity="center_vertical"
                android:hint="주소를 입력하세요"
                android:inputType="text"
                android:lineSpacingExtra="17sp"
                android:paddingLeft="10dp"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_step1_addr" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>