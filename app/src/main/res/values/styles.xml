<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#33d3d3d3</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomFullDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/greenish</item>
        <item name="colorControlNormal">@color/silver</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:fontFamily">@font/apple_sd</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>
</resources>
